@using Umbraco.Cms.Web.Common.PublishedModels
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ServiceDetails>


@{
	Layout = "MainLayout.cshtml";
	
}

<partial name="Partials/_PageBanner" model="(IPageBanner)Model" /> 

<section class="py-16">
	<div class="flex max-w-[1200px] mx-auto px-4 justify-center">
		<div class="flex flex-row lg:justify-between justify-center gap-2">
			<aside class="hidden lg:block min-w-1/4 flex flex-col gap-4">
				@Html.GetBlockListHtml(Model.ServiceAsides)
			</aside>


			<div class="hidden lg:block w-px h-full bg-gray-200 m-6"></div>


			<div class="3/4 flex flex-col gap-2">
                <div class="w-full flex justify-center">
                    <div class="flex flex-col justify-center">
                        @Html.GetBlockListHtml(Model.MainContent)
                    </div>
                </div>
            </div>


		</div>
	</div>
</section>