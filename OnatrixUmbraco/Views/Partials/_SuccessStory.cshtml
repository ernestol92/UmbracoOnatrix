@using Umbraco.Cms.Core.Models.Blocks
@using Umbraco.Cms.Web.Common.PublishedModels;
@using Umbraco.Cms.Core.Models.PublishedContent;
@model BlockListItem

@{
    var c = Model.Content;
    var toggle = c.Value<bool>("displaySection");
    var bgLayer = c.Value<IPublishedContent>("bgLayer");
    var bottomImage = c.Value<IPublishedContent>("bottomImage");
}

@if (toggle == true)
{
    <section id="success-story">
        <div class="relative w-full h-[610px] mb-20">
            <div class="w-full h-[500px] bg-[#4F5955] flex flex-col items-center justify-center">
                <div class="w-full h-[500px] bg-cover bg-center flex flex-col items-center justify-center  lg:justify-start xl:justify-start lg:pt-20 " style="background-image:url(@bgLayer?.Url())">


                    <div class="flex flex-col items-center justify-center max-w-[1200px]">
                        <strong class="text-sm text-[#D9C3A9]">SUCCESS STORIES</strong>
                        <h2 class="text-xl font-bold text-white">Success story</h2>
                    </div>


                    <div class="flex flex-col items-center justify-center max-w-[1200px] lg:flex-row lg:items-start">
                        <div class="w-70 flex flex-col items-center justify-center mt-8">
                            <p class="text-5xl font-bold text-[#D9C3A9]">689</p>
                            <p class="text-center text-white text-sm">More than 100 customers has been served</p>
                        </div>
                        <div class="w-70 flex flex-col items-center justify-center mt-8">
                            <p class="text-5xl font-bold text-[#D9C3A9]">370</p>
                            <p class="text-center text-white text-sm">More than 370 projects has been completed</p>
                        </div>
                        <div class="w-70 flex flex-col items-center justify-center mt-8">
                            <p class="text-5xl font-bold text-[#D9C3A9]">125</p>
                            <p class="text-center text-white text-sm">More than 125 branches has been established in Europe and America</p>
                        </div>
                    </div>
                    <img class="absolute bottom-5 hidden lg:block xl:block w-[40%] max-w-[500px]" src="@bottomImage?.Url()" alt="">

                </div>
                <!-- <img class="w-75 h-50 absolute bottom-15" src="/media/Video.png" alt=""> -->
            </div>
        </div>
    </section>
    
}