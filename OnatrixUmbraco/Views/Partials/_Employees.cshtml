@using Umbraco.Cms.Core.Models.Blocks;
@using Umbraco.Cms.Web.Common.PublishedModels;
@using Umbraco.Cms.Core.Models.PublishedContent;
@using System.Linq

@model BlockListItem

@{
    var c = Model.Content;

    var toggle = c.Value<bool>("toggle");
    var employeeBlocks = c.Value<IEnumerable<BlockListItem>>("employeesList");
    var employeeList = employeeBlocks?.ToList() ?? new List<BlockListItem>();
}
@if (toggle == true)
{
    <section id="employees" class="w-screen">
        <div class="w-full py-16 flex justify-center">

            <div class="w-3/4 max-w-[1200px]">
                <div class="w-full flex flex-col">
                    <strong class="text-sm text-[#D9C3A9] lg:text-center">OUR EXPERTS</strong>
                    <p class="text-2xl font-bold mt-2 mb-8 text-[#4F5955] lg:text-center">A team of professionals with years of experience</p>
                </div>

                <div id="project-container" class="flex lg:flex-wrap w-full overflow-y-scroll snap-mandatory snap-x
                                                    ">
                    @for (int i = 0; i < employeeList.Count(); i++)
                    {
                        var member = employeeList[i];
                        var colClass = i < 3 ? "lg:w-1/3" : "lg:w-1/4";

                        <div class="@colClass">
                                @await Html.PartialAsync("BlockList/employeecard", member)
                        </div>
                    }
                   

                </div>

            </div>
        </div>
    </section>
}